# vim: ft=muttrc
# color <object> <foreground> <background> [pattern]
#
# black = color16
# orange = color130

# Default color definitions
color hdrdefault color244 color16
color normal color253 color16
color signature white color16
color indicator color232 color220
color attachment color232 green
color error color231 color196
color message cyan color16
color search brightwhite magenta
color status white color26
color tree blue color16
color bold color130 color16
color tilde cyan color16
color markers cyan color16

# Index
color index green color16 ~N
color index color232 color230 ~O
color index red color16 ~F
color index color16 cyan ~T
color index color231 color196 ~D

# E-mail header
color header cyan color16 "^subject:"

# E-mail body
color body blue color16 "(http|ftp|news|telnet|finger)://[^ \"\t\r\n]*"
color body blue color16 "mailto:[-a-z_0-9.]+@[-a-z_0-9.]+"
color body blue color16 "[-a-z_0-9.%$]+@[-a-z_0-9.]+\\.[-a-z][-a-z]+"

# Quotes
color quoted magenta color16
color quoted1 blue color16
color quoted2 green color16
color quoted3 cyan color16
color quoted4 magenta color16
color quoted5 blue color16
color quoted6 green color16
color quoted7 cyan color16
